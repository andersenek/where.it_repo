<div class="custom-layout">
<%= form_for ([@post, @comment]) do |f| %>
  <%= f.label :subject %>
  <%= f.text_field :subject %>

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.hidden_field :user_id, :value => @user.id %>

  <%= f.hidden_field :user_email, :value => current_user.email %>

  <%= f.submit "Submit" %>
<% end %>
</div>
